<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- RadioButtonの設定 -->
    <style name="VMRadioStyleBl" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/vm_button_blank</item>
    </style>
    <style name="VMRadioStyleRi" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/vm_button_river</item>
    </style>
    <style name="VMRadioStyleBe" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/vm_button_beach</item>
    </style>
    <style name="VMRadioStyleKi" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/vm_button_kick</item>
    </style>
    <style name="VMVolume0" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/vm_sound_0</item>
    </style>
    <style name="VMVolume1" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/vm_sound_1</item>
    </style>
    <style name="VMVolume2" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/vm_sound_2</item>
    </style>
    <style name="VMVolume3" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/vm_sound_3</item>
    </style>

</resources>
